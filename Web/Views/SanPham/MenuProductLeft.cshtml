@using Web.Models;
@model IEnumerable<SanPham>
<div class="col-md-3 product-price">
    <div class="rsidebar span_1_of_left">
        <div class="of-left">
            <h3 class="cate">Danh Mục</h3>
        </div>
        <ul class="menu">
            @foreach (var groupitem in Model.GroupBy(n => n.LoaiSanPham))
            {
                if (groupitem != null)
                {
                <li class="item1">
                    <a href="#">@groupitem.Key.TenLoai</a>
                    <ul>
                    @foreach (var item in groupitem.GroupBy(x => x.NhaSanXuat))
                    {
                        if (item != null)
                        {
                        <li ><a href="@Url.Action("SanPham", "SanPham",new {maloaisp=groupitem.Key.MaLoaiSP, mansx = item.Key.MaNSX })">@item.Key.TenNSX</a></li>
                        }
                    }
                    </ul>
                </li>
                }
            }
        </ul>
    </div>
    <!--initiate accordion-->
    <script type="text/javascript">
        $(function () {
            var menu_ul = $('.menu > li > ul'),
                   menu_a = $('.menu > li > a');
            menu_ul.hide();
            menu_a.click(function (e) {
                e.preventDefault();
                if (!$(this).hasClass('active')) {
                    menu_a.removeClass('active');
                    menu_ul.filter(':visible').slideUp('normal');
                    $(this).addClass('active').next().stop(true, true).slideDown('normal');
                } else {
                    $(this).removeClass('active');
                    $(this).next().stop(true, true).slideUp('normal');
                }
            });

        });
    </script>
