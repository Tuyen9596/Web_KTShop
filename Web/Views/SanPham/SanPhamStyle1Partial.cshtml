@using Web.Models;
@model IEnumerable<SanPham>
<div class="row">
    @foreach (var item in Model.Take(15))
    {
        <div class="col-md-3 grid-top" style="margin-bottom:10px">
            <a href="@Url.RouteUrl("XemchitietSP",new { id=item.MaSP,@tensp=item.TenSP})" class="b-link-stripe b-animate-go  thickbox">
                <img class="img-responsive" src="@Url.Content("~/Content/images/"+item.HinhAnh)" style="height:250px !important;" >
                <div class="b-wrapper">
                    <h1 class="b-animate b-from-left b-delay03 ">
                        <span style="font-size:14px!important;padding-top:14px!important">@item.CauHinh</span>
                    </h1>
                </div>
            </a>
            <p style="text-align:center;"><a href="@Url.RouteUrl("XemchitietSP",new { id=item.MaSP,@tensp=item.TenSP})">@item.TenSP</a></p>
        </div>
    }
    <div class="clearfix"> </div>
</div>

