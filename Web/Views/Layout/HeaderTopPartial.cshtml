@using Web.Models;
<body>
    <div class="header-top" >
        <div class="container">
            <div class="search ">
                @*Tìm kiếm*@
                @using (Html.BeginForm("KQTimKiem", "TimKiem"))
                   {
                <input type="text" name="sTuKhoa" placeholder="Tên Sản Phẩm" />
                <input type="submit" value="Tìm" />
                     }
            </div>
            <div class="header-left">
                <ul>
                    @if (Session["TaiKhoan"] != null)
                    {
                        ThanhVien tv = (ThanhVien)Session["TaiKhoan"];
                         <!-- Single button -->
                        <div class="btn-group" >
                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                                @tv.TaiKhoan <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu" style="color:black">
                                <li><a href="#" style="color:black">@tv.HoTen</a></li>
                                <li><a href=@Url.Action( "DangXuat", "HomeLayout") style="color:black">Đăng Xuất</a></li>
                                <li><a href="#" style="color:black">Giỏ Hàng</a></li>
                                @if (tv.LoaiThanhVien.TenLoai.Trim() == "Admin")
                                {
                                    <li><a href=@Url.Action("Index","QuanLySanPham") style="color:black">Trang Quản Trị</a></li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <li><a href="#" id="btnlogin">Đăng Nhập</a></li>
                        <li><a href=@Url.Action("DangKy","HomeLayout")>Đăng Ký</a></li>
                    }
                    <li>@Html.Action("GioHangPartial", "GioHang")</li>
                </ul>
                @*Chen partial gio hang*@
               
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div>
        <div id="popup_login" style="display:none!important">
            <div class="login-form" id="login-form" ">
                <div style="clear:both;text-align:right;margin-top:0;margin-right:0;">
                    <span id="close-form" class="btn btn-danger">X</span>
                </div>
                <div class="form-info" >
                    @using (Html.BeginForm("Login", "HomeLayout"))
                    {
                        <input type="text" class="email" name="txtname" id="txtname" placeholder="Tài Khoản" required="" />
                            <input type="password" class="password" name="txtpass" id="txtpass" placeholder="Mật Khẩu" required="" />
                            <p><a href="#">Forgot password?</a></p>
                            <span class="alert-warning" style="color:red; text-align:left;" id="ThongBao"></span>
                            <ul class="login-buttons">
                                <li ><input type="submit"  value="Đăng Nhập" class="btn-danger"/></li>
                                <li ><a href=@Url.Action("DangKy","HomeLayout") class="btn btn-danger hvr-sweep-to-left">Đăng Ký</a></li>
                            </ul>
                    }
                </div>

            </div>
            <script type="text/javascript">
                $("#btnlogin").click(function () {
                    $("#popup_login").css("display", "block");
                    //$("#popup_login").fadeIn(500);
                });
                $("#close-form").click(function () {
                    $("#popup_login").css("display", "none");
                });
            </script>
        </div>
    </div>
</body>
<style>
    #btndangnhap {
        float: left;
    }
    #popup_login {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        z-index: 8080;
        display: none;
    }

    #clear {
        clear: both;
    }
</style>
