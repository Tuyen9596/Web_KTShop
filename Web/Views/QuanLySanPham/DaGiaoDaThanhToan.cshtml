@using Web.Models;
@model IEnumerable<DonDatHang>

@{
    ViewBag.Title = "DaGiaoDaThanhToan";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<ul class="nav nav-tabs">
    <li role="presentation" class="col-md-4"><a href="@Url.Action("ChuaThanhToan","QuanLySanPham")" style="font-size:1em;color:blue;">Chưa Thanh Toán</a></li>
    <li role="presentation" class="active col-md-4"><a href="@Url.Action("DaGiaoDaThanhToan","QuanLySanPham")" style="font-size:1em;color:blue;">Đã Thanh Toán & Đã Giao</a></li>
    <li role="presentation" class="col-md-4"><a href="@Url.Action("ChuaGiao","QuanLySanPham")" style="font-size:1em;color:blue;"> Chưa Giao</a></li>
</ul>
@{
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
@grid.GetHtml(
    tableStyle: "table table-bordered",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",

    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
        grid.Column("MaDDH", "ID"),
        grid.Column("NgayDat", "Date"),
         grid.Column("TinhTrangGiaoHang", "Status"),
        grid.Column("NgayGiao", "Date"),
         grid.Column("MaKH", "ID KH"),
        grid.Column("UuDai", "Uu Dai"),
        grid.Column("MaKH", "ID KH"),
        grid.Column("UuDai", "Uu Dai"),
        grid.Column("DaThanhToan", "DaThanhToan"),
        grid.Column("DaHuy", "Da Huy"),
        grid.Column("DaXoa", "Delete"),
        grid.Column(format: p => Html.ActionLink("Duyệt Đơn Hàng", "DuyetDonHang", new { id = p.MaDDH }))
        )
)





